{
  "manifest_version": 3,
  "name": "snarkySearch",
  "version": "1.0",
  "description": "Injects sarcastic responses into Google search results.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.google.com/search*"],
      "js": ["content.js"]
    }
  ]
}